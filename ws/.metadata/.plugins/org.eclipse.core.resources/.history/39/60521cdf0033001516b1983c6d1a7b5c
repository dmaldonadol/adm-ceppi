			response = Response.status(Status.OK).entity(lista).build();
		}
		catch (Exception e) 
		{
			LOGGER.error("Error al obtener la lista de Gastos.", e);
			response = Response.status(Status.INTERNAL_SERVER_ERROR).entity(null).build();
		}
		
		return response;
	}

